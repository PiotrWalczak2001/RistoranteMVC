@model TakeOrderViewModel

<form asp-controller="Order" asp-action="TakeOrder" method="post" role="form">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="@Model.Order.FirstName"></label>
        <div>
            <input asp-for="@Model.Order.FirstName" />
            <span asp-validation-for="@Model.Order.FirstName"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.LastName"></label>
        <div>
            <input asp-for="@Model.Order.LastName" />
            <span asp-validation-for="@Model.Order.LastName"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.Email"></label>
        <div>
            <input asp-for="@Model.Order.Email" />
            <span asp-validation-for="@Model.Order.Email"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.PhoneNumber"></label>
        <div>
            <input asp-for="@Model.Order.PhoneNumber" />
            <span asp-validation-for="@Model.Order.PhoneNumber"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.AddressLine1"></label>
        <div>
            <input asp-for="@Model.Order.AddressLine1" />
            <span asp-validation-for="@Model.Order.AddressLine1"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.AddressLine2"></label>
        <div>
            <input asp-for="@Model.Order.AddressLine2" />
            <span asp-validation-for="@Model.Order.AddressLine2"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.ZipCode"></label>
        <div>
            <input asp-for="@Model.Order.ZipCode" />
            <span asp-validation-for="@Model.Order.ZipCode"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.City"></label>
        <div>
            <input asp-for="@Model.Order.City" />
            <span asp-validation-for="@Model.Order.City"></span>
        </div>
    </div>

    <div>
        <label asp-for="@Model.Order.State"></label>
        <div>
            <input asp-for="@Model.Order.State" />
            <span asp-validation-for="@Model.Order.State"></span>
        </div>
    </div>

    <div>
        <div>
            <input type="submit" value="Order" />
        </div>
    </div>
</form>