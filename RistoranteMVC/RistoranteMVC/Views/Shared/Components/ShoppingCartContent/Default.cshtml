@model ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <li class="nav-item">
        <a class="nav-link active" asp-controller="ShoppingCart" asp-action="Index"> <i class="fas fa-shopping-cart"> @Model.ShoppingCart.ShoppingCartItems.Count </i> </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" asp-controller="ShoppingCart" asp-action="Index"> <i class="fas fa-shopping-cart"></i> </a>
    </li>
}